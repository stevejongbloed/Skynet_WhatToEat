<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Step"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/step_step" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1"
        android:layout_marginStart="20dp"
        android:id="@+id/step_txtNumber"
        android:layout_alignBottom="@+id/step_step"
        android:layout_toEndOf="@+id/step_step" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:layout_marginStart="20dp"
        android:id="@+id/step_txtTitle"
        android:layout_alignBottom="@+id/step_txtNumber"
        android:layout_toEndOf="@+id/step_txtNumber" />

</RelativeLayout>
