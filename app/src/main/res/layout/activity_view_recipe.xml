<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="skynet.nl.skynet_whattoeat.ViewRecipe"
    android:weightSum="1"
    android:id="@+id/view_recipe">

    <!-- Button to go back to the main screen -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button1"
        android:onClick="goBack"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/view_recipe1">

            <!-- Recipe name text -->
            <TextView
                android:id="@+id/name_text"
                android:textSize="20dp"
                android:text="Recipe:"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- textView for holding the recipe name -->
            <TextView
                android:id="@+id/recipe_txtName"
                android:textSize="20dp"
                android:hint="recipe name comes here"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    <!-- TextView with INGREDIENTS text -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/recipe5">

        <!-- text Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Category:"
            android:clickable="false"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/viewRecipe_dropdownCategories"/>

    </LinearLayout>

    <!-- ListView that holds all the recipes ingredients -->
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/recipe_ingredientsListView"
        android:layout_gravity="center_horizontal" />

    <!-- ImageView that will (possibly) hold the image of the recipe -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/image_holder"
        android:layout_gravity="center_horizontal" />


    <ListView
        android:layout_width="327dp"
        android:layout_height="132dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/recipe_stepsListView"
        android:layout_weight="0.10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/view_recipe2">

        <!-- Total steps  name text -->

        <!-- textView for holding the number of steps -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/view_recipe3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/view_recipe3">
        <!-- Duration name text -->
        <TextView
            android:id="@+id/name2"
            android:textSize="15dp"
            android:text="Duration:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- textView for holding the duration in minutes -->
        <TextView
            android:id="@+id/recipe_txtDuration"
            android:textSize="13dp"
            android:hint="duration (mins) comes here"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Button to start making the recipe -->
    </LinearLayout>
</LinearLayout>